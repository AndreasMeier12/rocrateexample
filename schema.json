{
  "$id": "https://openbis.ch/",
  "type": "object",
  "baseTypes": {
    "space": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "project": {
      "type": "object",
      "properties": {
        "identifier": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "space": {
          "type": "string"
        }
      },
      "required": ["code"]
    },
    "collection": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "description":  {
          "type": "string"
        },
        "validation script": {
          "type": "string"
        }
      },
      "required": ["code"]
    },
    "object": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "space": {
          "type": "string"
        },
        "project": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "auto generated": {
          "type": "boolean"
        },
        "validation": {
          "type": "string"
        }, "generated code prefix": {
          "type": "string"
        },
        "parents": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "children": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["code", "generated code prefix"],
      "semantics": "https://openbis.readthedocs.io/en/20.10.x/user-documentation/general-users/ELN-types.html#object-types"
    },
    "dataset": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "description":  {
          "type": "string"
        },
        "validation script": {
          "type": "string"
        }
      },
      "required": ["code"]
    },
    "vocabulary": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "description": {"type": "string"}
      }, "required": ["code"]
    }
  },
  "vocabularies":{
    "default_collection_view": {
      "type": "object",
      "allOf": "#/baseTypes/vocabulary",
      "properties": {
        "code": {
          "type": "string",
          "enum": ["FORM_VIEW", "LIST_VIEW"]
          
        }, 
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["code"]
    }
  },
  "collections":{
    "collection": {
      "type": "object",
      "allOf": [
        {"$ref": "#/baseTypes/collection"}
      ]
    }, "properties": {
      "name": {
        "type": "string",
        "description": "Name"
      },
      "default_object_type": {
        "type": "string",
        "description": "Enter the code of the object for which the collection is used"
      },
      "default_collection_view": {
        "$ref": "#/vocabularies/default_collection_view",
        "description": "Default view for experiments of the type collection"
      }

    }
  },
  "datasets":{
    "raw_data": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/baseTypes/dataset"
        }
      ]
    },
    "properties": {
      "$name": {"type": "string", "description": "Name"},
      "notes": {"type": "string", "description": "Notes"},
      "$xmlcomment": {"type": "string", "description": "Comments log"}
    }
  },
  "objects":{
    "entry": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/baseTypes/object"
        }
      ]
    },
    "properties": {
      "$name": {"type": "boolean",
        "section": "general",
        "description": "Name"
    },
      "$notes": {"type": "boolean",
        "section":"general",
        "description": "Notes"},
      "$document": {"type": "string",
    "description": "Comments log"}

    }
  }
}